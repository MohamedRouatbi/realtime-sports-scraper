# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# WebSocket Configuration
BWIN_WS_URL=wss://websocket.bwin.com/feed
SOFASCORE_WS_URL=wss://www.sofascore.com/u

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Performance Settings
RECONNECT_DELAY=3000
MAX_RECONNECT_ATTEMPTS=10
HEARTBEAT_INTERVAL=30000

# Alert Settings
ENABLE_GOALS=true
ENABLE_RED_CARDS=true
ENABLE_YELLOW_CARDS=true

# VPS Deployment - Anti-Bot Configuration
# =========================================

# Xvfb Virtual Display (for headful mode without physical monitor)
# Set this to :99 if running on VPS with Xvfb
DISPLAY=:99

# Residential Proxy Configuration (highly recommended for production)
# Format: host:port (without http:// prefix for Puppeteer)
# Examples:
#   Bright Data: brd.superproxy.io:22225
#   Smartproxy: gate.smartproxy.com:7000
#   Oxylabs: pr.oxylabs.io:7777
PROXY_SERVER=

# Proxy Authentication
# Get these from your proxy provider dashboard
PROXY_USERNAME=
PROXY_PASSWORD=

# Proxy Provider Examples:
# ------------------------
# Bright Data:
#   PROXY_SERVER=brd.superproxy.io:22225
#   PROXY_USERNAME=brd-customer-hl_xxxxxxxx-zone-residential
#   PROXY_PASSWORD=your_password
#
# Smartproxy:
#   PROXY_SERVER=gate.smartproxy.com:7000
#   PROXY_USERNAME=your_username
#   PROXY_PASSWORD=your_password
#
# For SOCKS5 proxy:
#   PROXY_SERVER=socks5://proxy-host:1080
